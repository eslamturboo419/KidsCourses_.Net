@model KProj.Models.RegisterVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!--Meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- First Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Descripition -->
    <meta name="description" content="Learning Kids Programming">
    <!-- Application-Name -->
    <meta name="application-name" content="M_Kids">
    <!-- Author Name -->
    <meta name="author" content="">
    <!-- Page Title -->
    <title>signup</title>
    <!-- Favicon -->
    <link rel="icon" href="~/Content/Assets/images/logo/favicon.ico">
    <!--BootStrap -->
    <link rel="stylesheet" href="~/Content/Assets/css/bootstrap.min.css">
 
    <!-- Font-Awesome -->
    <link rel="stylesheet" href="~/Content/Assets/css/font-awesome.css">
    <!--[if lt IE 9>
        <script src="~/Content/Assets/Js/html5shiv.min.js"></script>
        <script src="~/Content/Assets/css/Normalize.css"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/Content/Assets/css/main.css">
</head>

<body>

    <div class="container-fluid p-0">
        <div class="row no-gutters">

            <div class="col-lg-5 col-12 order-2 order-lg-1 bg-color">
                <div class="login register">
                    <div class="logo-site">
                        <a href="#" target="_self"onclick='document.location ="@Url.Action("Index","Home" )"'>
                            <img src="~/Content/Assets/images/logo/favicon.ico" class="align-items-center">
                        </a>
                    </div>
                    <h3>We Are Mentor</h3>
                    <p>Welcome , Please create your account.</p>
                    @*<form action="" enctype="multipart/form-data">*@

                    @using (Html.BeginForm())
    {
                @Html.AntiForgeryToken()

                <div>
                    <label>First Name *</label>
                    <div class="username-input">
                        @*<input type="text" placeholder="UserName" autofocus>*@
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "", placeholder = "First Name" } })
                        <span><i class="fa fa-user"></i></span>
                    </div>
                </div>

                <div>
                    <label>Last Name *</label>
                    <div class="username-input">
                        @*<input type="text" placeholder="UserName" autofocus>*@
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "", placeholder = "last Name" } })
                        
                        <span><i class="fa fa-user"></i></span>
                    </div>
                </div>




                <div>
                    <label>Email *</label>
                    <div class="Email-input">
                        @*<input type="text" placeholder="Email">*@
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "", placeholder = "Email" } })
                        <span><i class="fa fa-telegram"></i></span>
                    </div>
                </div>

                <div>
                    <label>Password *</label>
                    <div class="password-input">
                        @*<input type="password" placeholder="Password">*@
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "", placeholder = "Password" } })
                        <span><i class="fa fa-lock"></i></span>
                    </div>
                </div>

                <div>
                    <label>Confirm Password *</label>
                    <div class="confirm-input">
                        @*<input type="password" placeholder="Confirm Password">*@
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "", placeholder = "Confirm Password" } })
                        <span><i class="fa fa-lock"></i></span>
                    </div>
                </div>
                <div>
                    <label>Type *</label>
                    <div class="confirm-input">
                        <select name="TypeUser" id="TypeUser" class="form-control">
                            <option value=""> ------  </option>
                            <option value="3"> Child </option>
                            <option value="2">Teacher</option>
                        </select>
                            
                            <span><i class="fa fa-user-secret"></i></span>
                    </div>
                </div>


                <div style="text-align: center" class="signUp">
                    <input type="submit" value="Sign Up">
                </div>

                <div class="signup">
                    <span>Do have an account ?</span>
                    <a href="#" onclick='document.location ="@Url.Action("Login","LoginSignUp" )"'>Sign In</a>
                </div>
}
                    @*</form>*@

                </div><!-- End Login -->
            </div><!-- End Column -->

            <div class="col-lg-7 col-12  order-1 order-lg-2 bg-color1">
                <div class="col-7 mx-auto align-self-center signup-image">
                    <img src="~/Content/Assets/images/register/code.svg">
                </div>
            </div>
        </div>
    </div>



    <!-- Loader -->

    <div class="preloader" id="preloader">
        <div class="loader loader-1">
            <div class="loader-outter"></div>
            <div class="loader-inner"></div>
        </div>
    </div>

    <!-- Jquery ==== -->
    <script src="~/Content/Assets/Js/jquery-3.3.1.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/Assets/Js/bootstrap.min.js"></script>
    <!-- NiceScroll -->
    <script src="~/Content/Assets/Js/jquery.nicescroll.js"></script>
    <!-- Wow -->
    <script src="~/Content/Assets/Js/wow.min.js"></script>
    <!-- Plugins -->
    <script src="~/Content/Assets/Js/plugin.js"></script>
    <script>
    nicescroll();
    </script>
</body>

</html>